---
import projectsData from '../../data/projects.json';
---

<section id="projects" class="py-20 md:py-32 px-4 bg-bg-secondary">
  <div class="container mx-auto max-w-6xl">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="text-4xl md:text-5xl font-mono font-bold text-matrix mb-4">
        Proyectos
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        Soluciones reales que combinan desarrollo web con automatizaciones inteligentes
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {projectsData.map((project, index) => (
        <article
          class="terminal-card group hover:shadow-glow-matrix transition-all duration-500 overflow-hidden"
          style={`animation-delay: ${index * 0.2}s;`}
        >
          <!-- Project Image -->
          <div class="relative h-56 mb-6 overflow-hidden bg-bg-tertiary" style="border-radius: 20px 20px 0 0; margin: -24px -24px 0 -24px;">
            {project.image ? (
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="text-center">
                  <div class="text-6xl mb-4">
                    {project.id === 1 ? 'ðŸŽ¨' : 'ðŸ§‰'}
                  </div>
                  <p class="text-matrix font-mono">{project.title}</p>
                </div>
              </div>
            )}
          </div>

          <!-- Project Info -->
          <div class="space-y-4">
            <!-- Title -->
            <h3 class="text-2xl font-mono font-bold text-matrix">
              {project.title}
            </h3>

            <!-- Description -->
            <p class="text-gray-300 leading-relaxed">
              {project.description}
            </p>

            <!-- Features -->
            <div class="space-y-2">
              <h4 class="font-mono text-sm text-gray-500">Features</h4>
              <ul class="space-y-1">
                {project.features.map(feature => (
                  <li class="text-sm text-gray-400 flex items-start gap-2">
                    <span class="text-gray-500 mt-1">â€¢</span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Tech Stack Tags -->
            <div class="flex flex-wrap gap-2 pt-4 border-t border-border">
              {project.tech.map(tech => (
                <span class="px-3 py-1 bg-black border border-border-light text-matrix text-xs font-mono rounded-full hover:border-matrix hover:shadow-glow-matrix transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>

            <!-- Links -->
            <div class="flex gap-3 pt-4">
              <a
                href={project.liveUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 text-center px-4 py-3 bg-matrix text-black font-mono font-semibold text-sm hover:bg-matrix-light transition-colors"
                style="border-radius: 12px;"
              >
                Ver Demo â†—
              </a>
              <a
                href={project.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 text-center px-4 py-3 border-2 border-matrix text-matrix font-mono font-semibold text-sm hover:bg-matrix hover:text-black transition-all"
                style="border-radius: 12px;"
              >
                CÃ³digo
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- More Projects CTA -->
    <div class="mt-16 text-center">
      <a
        href="https://github.com/Markopamichh"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-8 py-4 border-2 border-matrix text-matrix font-mono font-semibold hover:bg-matrix hover:text-black transition-all duration-300"
        style="border-radius: 16px;"
